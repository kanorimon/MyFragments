          <div id="memo<%= memo.id %>">
            <div>
              <%= memo.id %>:
              <%= memo.text %>
            </div>
            <div class="row">
              <div class="span7 weak">
                <div class="text-right">
                  <% memo.tags.each do |tag| %>
                    <a href="#"><%= tag.name %></a> 
                  <% end %>
                  <i class="icon-edit"></i>
                </div>
              </div>
              <div class="span2 weak">
                <div class="text-right">
                  <%= memo.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                  <%= link_to  '<i class="icon-trash"></i> '.html_safe, 
                    memo, :method => :delete,
                    :remote => true,
                    data: { confirm: '削除しますか？' } %>
                </div>
              </div>
            </div>

            <hr class="memo">
          </div>
